body {
  justify-content: center;
  align-items: center;
  font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
  min-height: 100vh;
}

.list {
  padding: 1% 75px 10px 30px;
  margin-left: 10%;
  margin-right: 10%;
  position: relative;
  background: #f1e4da;
  overflow-wrap: break-word;
  border-radius: 5%;
  /* border: 1px dotted;
  border-color: #ee9ca8;
  box-shadow: #d6949d; */
}

.list label {
  position: relative;
  display: block !important;
  margin: 3% 20%;
  color: rgb(95, 95, 95);
  font-size: 18px;
  cursor: pointer;
  font-weight: lighter;
  /* border: 0.5px solid #fff; */
  border-radius: 3px;
  border-spacing: 5px;
  overflow-wrap: break-word;
}

/* .list label:hover {
  background: rgba(0, 0, 0, 0.1);
} */

.list input[type="checkbox"] {
  -webkit-appearance: none;
}

.list i {
  position: absolute;
  top: 3px;
  display: inline-block;
  width: 20px;
  height: 20px;
  border: 1.5px solid #ffffff;
}

.list input[type="checkbox"]:checked ~ i {
  top: 1px;
  border-top: none;
  border-right: none;
  width: 25px;
  height: 15px;
  transform: rotate(-45deg);
}
.list p {
  margin-left: 45px;
  font-size: medium;
  color: rgba(0, 0, 0, 0.6);
}
.list span {
  position: relative;
  font-weight: 350;
  left: 40px;
  transition: 0.5s;
}
